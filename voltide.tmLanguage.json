{
  "scopeName": "source.voltide",
  "name": "VoltScript",
  "fileTypes": ["vlt"],
  "patterns": [
    { "include": "#keywords" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#operators" },
    { "include": "#comments" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.voltide",
          "match": "\\b(if|else|end|while|set|print|log|motor|volt|move)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.voltide",
          "match": "\\b\\d+(?:\\.\\d+)?(?:ms)?\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.voltide",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.voltide", "match": "\\\\." }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.voltide",
          "match": "(==|!=|<=|>=|<|>|\\+|\\-|\\*|/)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.voltide",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.voltide",
          "match": "#.*$"
        }
      ]
    }
  }
}
